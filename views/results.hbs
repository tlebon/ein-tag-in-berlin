<div class="container">
  <div class="card">

    <div class="loading"> <h2>LOADING YOUR BIG NIGHT</h2>
      <img src="https://loading.io/spinners/ellipsis/lg.discuss-ellipsis-preloader.gif" alt="loading gif"></div>
    <div id="floating-panel" class="hidden">
    <b>Mode of Travel: </b>
    <select id="mode" >
      <option value="DRIVING">Driving</option>
      <option value="WALKING">Walking</option>
      <option value="BICYCLING">Bicycling</option>
      {{!-- <option value="TRANSIT">Transit</option>   only works for 2 points!--}} 
    </select>

    </div>
    <div id="map" class="hidden"></div>
    <div class="restaurants hidden">
    CHOOSE A LOCAL RESTAURANT
      {{> restPartial}}
    </div>
       <button class="rest-btn hidden" type="submit">Pick a different restaurant</button>
    <div class="bars hidden">
          CHOOSE A LOCAL BAR

      {{> barPartial}}
    </div>
       <button class="bar-btn hidden" type="submit">Pick a different bar</button>
    <div class="events hidden">
          CHOOSE A LOCAL EVENT

      {{> eventPartial}}
    </div>
       <button class="event-btn hidden" type="submit">Pick a different event</button>
  </div>
</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBl4-KohgjS2KFG7FZNT21QZZiDeUkioMc"></script>