<div class="container">

    <div class="card">
        <h1>Sign Up</h1>

        <form action="/sign-up" method='POST'>
            <label for="username">Username</label><input type="text" name='username' required='true'>
            <br>
           <label for="password">Password</label><input type="password" name='password' required='true'>
            <br>
            <label for="role">Role</label><input type="text" name='role'>
            <br>
            <label for="image">Image URL</label><input type="text" name='image'>
            <br>
            <br>
            <br>
            <button type='submit'>Create my User Account</button>
            <br>
            <br> {{#if error}}
            <p>ERROR: {{error}}</p>
            {{/if}}
        </form>

      
    </div>
</div>